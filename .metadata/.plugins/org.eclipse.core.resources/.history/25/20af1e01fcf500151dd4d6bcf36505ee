#ifndef MODE_H_
#define MODE_H_

#include "FreeRTOS.h"
#include "stm32f4xx.h"
#include "general.h"


/*%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
 * Define Mode of Operation
 *%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% */

/*********************************************************************************************
 * Mode of Operation
 *********************************************************************************************/
typedef enum {
	allModes				= 		(uint8_t) 0x00,
	mode1					=		(uint8_t) 0x01,
	mode2					=		(uint8_t) 0x02,
	mode3					= 		(uint8_t) 0x03
} Mode;


/*********************************************************************************************
 * Global variable indicating current Mode of Operation
 *********************************************************************************************/
Mode my_mode;


/*********************************************************************************************
 * Map SAVs to their current Mode of Operation
 *********************************************************************************************/
Mode my_mode;


#endif /* MODE_H_ */
